---
import siteData from '../data/dataService';
import { FaWhatsapp, FaPhone, FaMapMarkerAlt } from 'react-icons/fa';
const { client, hero } = siteData;

const whatsappUrl = `https://wa.me/${client.whatsapp}`;
const heroBg = hero.bg_image || '/images/hero_bg.png';

// LÃ³gica de iniciales para placeholder
const initials = client.name
	.split(' ')
	.map(n => n[0])
	.join('')
	.toUpperCase()
	.slice(0, 2);
---

<header class="relative bg-center bg-cover min-h-[100vh] flex items-center pt-40 pb-32 overflow-hidden" style={`background-image: url('${heroBg}');`}>
	<div class="absolute inset-0 bg-gradient-to-r from-white/98 via-white/95 to-white/70 z-10"></div>
	
	<div class="container relative z-20">
		<div class="max-w-3xl">
			<div class="flex items-center gap-8 mb-10 md:flex-col md:gap-4 md:items-start">
				<div class="flex items-center justify-center">
					{client.logo ? (
						<div class="bg-white p-2 rounded-full shadow-md ">
							<img src={client.logo} alt={client.name} class="h-50 w-auto object-contain rounded-full" />
						</div>
					) : (
						<div class="w-24 h-24 bg-gradient-to-br from-primary to-secondary text-white rounded-full flex items-center justify-center shadow-xl border-4 border-white text-3xl font-extrabold tracking-tighter">
							{initials}
						</div>
					)}
				</div>
				<span class="font-bold text-gray-600 text-sm uppercase tracking-widest bg-white/80 backdrop-blur-sm px-4 py-2 rounded-full flex items-center gap-2 ring-1 ring-black/5">
					<FaMapMarkerAlt size={18} class="text-primary" /> {client.location}
				</span>
			</div>
			
			<h1 class="text-7xl font-extrabold text-primary mb-6 leading-[1.05] md:text-5xl">
				{hero.title}
			</h1>
			
			<p class="text-2xl text-gray-700 mb-14 opacity-90 max-w-2xl leading-relaxed md:text-xl">
				{hero.subtitle}
			</p>
			
			<div class="flex gap-6 md:flex-col">
				<a href={whatsappUrl} class="btn btn-outline text-lg px-10 py-4 decoration-none" target="_blank">
					<FaWhatsapp size={22} />
					{hero.cta_main}
				</a>
{/*				<a href={`tel:${client.phone}`} class="btn btn-outline text-lg px-10 py-4 decoration-none">
					<FaPhone size={20} />
					{hero.cta_sec}
				</a>*/}
			</div>
		</div>
	</div>
</header>
