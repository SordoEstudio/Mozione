---
import siteData from '../config/site.json';
import { FaWhatsapp, FaPhone, FaMapMarkerAlt } from 'react-icons/fa';
const { client, hero } = siteData;

const whatsappUrl = `https://wa.me/${client.whatsapp}`;
---

<header class="relative bg-center bg-cover min-h-[90vh] flex items-center pt-40 pb-32 overflow-hidden" style={`background-image: url('/images/hero_bg.png');`}>
	<div class="absolute inset-0 bg-gradient-to-r from-white/98 via-white/95 to-white/70 z-10"></div>
	
	<div class="container relative z-20">
		<div class="max-w-3xl">
			<div class="flex items-center gap-8 mb-10 md:flex-col md:gap-4 md:items-start">
				<div class="bg-white p-2 rounded-full shadow-md">
					<img src={client.logo} alt={client.name} class="h-60 w-auto object-contain" />
				</div>
				<span class="font-bold text-secondary text-sm uppercase tracking-widest bg-secondary/10 px-4 py-2 rounded-full flex items-center gap-2">
					<FaMapMarkerAlt size={20} /> {client.location}
				</span>
			</div>
			
			<h1 class="text-7xl font-extrabold text-primary mb-6 leading-[1.05] md:text-5xl">
				{hero.title}
			</h1>
			
			<p class="text-2xl text-gray-700 mb-14 opacity-90 max-w-2xl leading-relaxed md:text-xl">
				{hero.subtitle}
			</p>
			
			<div class="flex gap-6 md:flex-col">
				<a href={whatsappUrl} class="btn btn-whatsapp text-lg px-10 py-4" target="_blank">
					<FaWhatsapp size={22} />
					{hero.cta_main}
				</a>
				<a href={`tel:${client.phone}`} class="btn bg-white border-2 border-primary text-primary hover:bg-primary hover:text-white text-lg px-10 py-4 decoration-none">
					<FaPhone size={20} />
					{hero.cta_sec}
				</a>
			</div>
		</div>
	</div>
</header>
