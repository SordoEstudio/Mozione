---
import siteData from '../config/site.json';
import { FaInstagram, FaFacebook, FaMapMarkerAlt, FaPhone } from 'react-icons/fa';
const { client } = siteData;
---

<footer class="bg-slate-900 text-slate-400 pt-24">
	<div class="container grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-16 mb-20 md:text-center">
		<div class="flex flex-col md:items-center">
			<div class="w-40 h-40 bg-white p-2 rounded-full mb-6">
				<img src={client.logo} alt={client.name} class="w-full h-full object-contain rounded-full" />
			</div>
			<h3 class="text-white text-2xl font-bold mb-2">
				{client.name}
			</h3>
			<p class="text-sm">
				{client.type}
			</p>
		</div>
		
		<div class="flex flex-col md:items-center">
			<h4 class="text-white text-sm font-bold uppercase tracking-widest mb-8">
				Contacto Local
			</h4>
			<div class="space-y-4">
				<p class="flex items-center gap-3 md:justify-center">
					<FaMapMarkerAlt size={16} class="text-secondary shrink-0" /> 
					{client.address}
				</p>
				<p class="md:justify-center">
					{client.location}, Argentina
				</p>
				<p class="flex items-center gap-3 md:justify-center">
					<FaPhone size={16} class="text-secondary shrink-0" /> 
					{client.phone}
				</p>
			</div>
		</div>
		
		<div class="flex flex-col md:items-center">
			<h4 class="text-white text-sm font-bold uppercase tracking-widest mb-8">
				Nuestras Redes
			</h4>
			<div class="flex flex-col gap-5">
				<a href={client.instagram} target="_blank" aria-label="Instagram" class="flex items-center gap-4 text-slate-300 decoration-none transition-all hover:text-white hover:translate-x-2 md:justify-center md:hover:translate-x-0">
					<FaInstagram size={24} class="text-secondary" />
					<span class="font-medium">{client.instagram_label}</span>
				</a>
				<a href={client.facebook} target="_blank" aria-label="Facebook" class="flex items-center gap-4 text-slate-300 decoration-none transition-all hover:text-white hover:translate-x-2 md:justify-center md:hover:translate-x-0">
					<FaFacebook size={24} class="text-secondary" />
					<span class="font-medium">{client.facebook_label}</span>
				</a>
			</div>
		</div>
	</div>
	
	<div class="border-t border-white/5 py-10 text-center text-sm">
		<div class="container">
			<p>Â© {new Date().getFullYear()} {client.name}. Todos los derechos reservados.</p>
		</div>
	</div>
</footer>
