---
import siteData from '../data/dataService';
import { FaInstagram, FaFacebook, FaMapMarkerAlt, FaPhone } from 'react-icons/fa';
const { client } = siteData;

// Lógica de iniciales para placeholder
const initials = client.name
	.split(' ')
	.map(n => n[0])
	.join('')
	.toUpperCase()
	.slice(0, 2);
---

<footer class="bg-slate-900 text-slate-400 pt-24 border-t border-white/5">
	<div class="container grid grid-cols-1 lg:grid-cols-[1fr_auto_1fr_auto_1fr] gap-12 mb-20">
		<!-- Col 1: Logo -->
		<div class="flex flex-col">
			<div class="flex mb-10">
				{client.logo ? (
					<div class="w-24 h-24 bg-white p-1 rounded-full ring-1 ring-white/10 shadow-xl shadow-black/20">
						<img src={client.logo} alt={client.name} class="w-full h-full object-contain rounded-full" />
					</div>
				) : (
					<div class="w-24 h-24 bg-gradient-to-br from-primary to-secondary text-white rounded-2xl flex items-center justify-center shadow-xl text-3xl font-bold">
						{initials}
					</div>
				)}
			</div>
			<h3 class="text-white text-2xl font-bold mb-2">
				{client.name}
			</h3>
			<p class="text-sm opacity-60">
				{client.type}
			</p>
		</div>
		
		<div class="footer-divider"></div>

		<!-- Col 2: Contacto -->
		<div class="flex flex-col">
			<h4 class="text-white text-xs font-bold uppercase tracking-[0.2em] mb-8 opacity-50">
				Contacto Local
			</h4>
			<div class="space-y-6">
				<a href={client.maps_link} target="_blank" class="flex items-start gap-4 text-slate-300 decoration-none group">
					<FaMapMarkerAlt size={18} class="text-primary mt-1 shrink-0 transition-transform group-hover:scale-110" /> 
					<div class="flex flex-col">
						<span class="font-medium group-hover:text-primary transition-colors">{client.address}</span>
						<span class="text-sm opacity-60 group-hover:text-primary/80 transition-colors">{client.location}, Argentina</span>
					</div>
				</a>
				<a href={`tel:${client.phone}`} class="flex items-center gap-4 text-slate-300 decoration-none group">
					<FaPhone size={18} class="text-primary shrink-0 transition-transform group-hover:scale-110" /> 
					<span class="font-medium group-hover:text-primary transition-colors">{client.phone}</span>
				</a>
			</div>
		</div>
		
		<div class="footer-divider"></div>

		<!-- Col 3: Redes -->
		<div class="flex flex-col">
			<h4 class="text-white text-xs font-bold uppercase tracking-[0.2em] mb-8 opacity-50">
				Nuestras Redes
			</h4>
			<div class="flex flex-col gap-5">
				{client.instagram && (
					<a href={client.instagram} target="_blank" aria-label="Instagram" class="flex items-center gap-4 text-slate-300 decoration-none group">
						<div class="w-10 h-10 rounded-xl bg-white/5 flex items-center justify-center transition-all group-hover:bg-primary/20">
							<FaInstagram size={20} class="text-primary transition-transform group-hover:scale-110" />
						</div>
						<span class="font-medium group-hover:text-primary transition-colors">{client.instagram_label}</span>
					</a>
				)}
				{client.facebook && (
					<a href={client.facebook} target="_blank" aria-label="Facebook" class="flex items-center gap-4 text-slate-300 decoration-none group">
						<div class="w-10 h-10 rounded-xl bg-white/5 flex items-center justify-center transition-all group-hover:bg-primary/20">
							<FaFacebook size={20} class="text-primary transition-transform group-hover:scale-110" />
						</div>
						<span class="font-medium group-hover:text-primary transition-colors">{client.facebook_label}</span>
					</a>
				)}
			</div>
		</div>
	</div>
	
	<div class="border-t border-white/5 py-10 text-center text-sm">
		<div class="container">
			<p>© {new Date().getFullYear()} {client.name}. Todos los derechos reservados.</p>
		</div>
	</div>
</footer>
