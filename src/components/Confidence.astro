---
import siteData from '../data/dataService';
import { FaStar, FaUser, FaCalendarDay, FaClock } from 'react-icons/fa';
const { confidence_items } = siteData;
---

<section class="py-16 bg-gray-50/50 -mt-12 relative z-30 md:mt-0 md:py-8">
	<div class="container grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
		{confidence_items.map((item) => (
			<div class="card-soft p-6 flex items-center gap-5">
				<div class="w-14 h-14 bg-primary/10 text-primary rounded-2xl flex items-center justify-center shrink-0">
					{item.icon === 'check' && <FaStar size={24} />}
					{item.icon === 'user' && <FaUser size={24} />}
					{item.icon === 'calendar' && <FaCalendarDay size={24} />}
					{item.icon === 'clock' && <FaClock size={24} />}
				</div>
				<p class="font-bold text-primary text-base leading-tight">
					{item.text}
				</p>
			</div>
		))}
	</div>
</section>
