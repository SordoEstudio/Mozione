---
import siteData from '../data/dataService';
const { about } = siteData;
---

<section id="sobre" class="py-32 bg-white md:py-16">
	<div class="container grid grid-cols-1 md:grid-cols-2 gap-20 items-center md:gap-10">
		<div class="relative group">
			<div class="absolute -inset-4 bg-primary/5 rounded-[40px] scale-95 opacity-0 transition-all duration-500 group-hover:scale-100 group-hover:opacity-100"></div>
			<img
				src={about.image}
				alt={about.title}
				class="relative w-full h-[600px] object-cover rounded-3xl shadow-2xl ring-1 ring-black/5 md:h-[400px]"
			/>
		</div>

		<div class="max-w-xl">
			<h2 class="text-5xl font-extrabold text-primary mb-8 leading-tight md:text-3xl">
				{about.title}
			</h2>
			<div class="w-20 h-1.5 bg-secondary mb-8 rounded-full"></div>
			<p class="text-xl text-gray-600 leading-relaxed opacity-90">
				{about.text}
			</p>
		</div>
	</div>
</section>
