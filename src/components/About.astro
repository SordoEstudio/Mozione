---
import siteData from '../config/site.json';
const { about } = siteData;
---

<section id="sobre" class="py-32 bg-white md:py-16">
	<div class="container flex-col gap-20 items-center md:grid md:grid-cols-2 md:gap-10">
		<div class="relative group flex">
			<div class="absolute  -inset-4 bg-secondary/10 rounded-3xl -rotate-3 transition-transform group-hover:rotate-0 w-[400px]"></div>
			<div class="relative rounded-3xl overflow-hidden shadow-2xl border-4 border-white">
				<img src="/images/about_rehab.png" alt={about.title} class="w-[400px] h-auto object-cover" />
			</div>
		</div>
		
		<div class="max-w-xl">
			<h2 class="text-5xl font-extrabold text-primary mb-8 leading-tight md:text-3xl">
				{about.title}
			</h2>
			<div class="w-20 h-1.5 bg-secondary mb-8 rounded-full"></div>
			<p class="text-xl text-gray-600 leading-relaxed opacity-90">
				{about.text}
			</p>
		</div>
	</div>
</section>
