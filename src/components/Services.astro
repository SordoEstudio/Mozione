---
import siteData from '../data/dataService';
import { FaChevronRight } from 'react-icons/fa';
const { services, client } = siteData;

const whatsappUrl = `https://wa.me/${client.whatsapp}`;
---

<section id="servicios" class="py-32 bg-gray-50 md:py-16">
	<div class="container">
		<div class="text-center mb-20 md:mb-12">
			<h2 class="text-5xl font-extrabold text-primary mb-4 md:text-3xl">
				Especialidades y Servicios
			</h2>
			<p class="text-xl text-gray-500 max-w-2xl mx-auto leading-relaxed">
				Atención kinésica integral con un enfoque en tu bienestar y recuperación efectiva.
			</p>
		</div>
		
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
			{services.map((service) => (
				<div class="bg-white p-14 rounded-[30px] shadow-md transition-all duration-300 hover:-translate-y-2.5 hover:shadow-2xl hover:border-secondary border border-gray-100 flex flex-col md:p-10">
					<h3 class="text-3xl font-bold text-primary mb-5 md:text-2xl">
						{service.title}
					</h3>
					<p class="text-gray-600 leading-relaxed mb-8 opacity-80 flex-grow">
						{service.description}
					</p>
					<a href={whatsappUrl} class="flex items-center gap-2 text-secondary font-bold uppercase tracking-widest text-sm decoration-none group" target="_blank">
						{service.cta} 
						<FaChevronRight size={14} class="transition-transform group-hover:translate-x-1" />
					</a>
				</div>
			))}
		</div>
	</div>
</section>
