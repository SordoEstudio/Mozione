---
import siteData from '../data/dataService';
import { FaMapMarkerAlt, FaClock, FaMobileAlt, FaExternalLinkAlt } from 'react-icons/fa';
const { client } = siteData;
---

<section id="ubicacion" class="py-32 bg-gray-50 md:py-16">
	<div class="container grid grid-cols-1 lg:grid-cols-[1fr_1.2fr] gap-20 items-center">
		<div class="card-static p-12 md:p-8">
			<h2 class="text-4xl font-extrabold text-primary mb-12 flex items-center gap-4 md:text-3xl">
				<FaMapMarkerAlt class="text-secondary" /> Ubicación y Horarios
			</h2>
			
			<div class="space-y-12">
				<div>
					<div class="flex items-center gap-4 text-primary mb-3">
						<FaMapMarkerAlt size={22} class="opacity-80" />
						<h3 class="text-xs font-bold uppercase tracking-widest text-gray-500">
							Dirección
						</h3>
					</div>
					<p class="text-2xl font-bold text-primary mb-3 md:text-lg">
						{client.address}, {client.location}
					</p>
					<a href={client.maps_link} target="_blank" class="inline-flex items-center gap-2 text-primary font-bold text-sm decoration-none hover:border-b-2 border-primary transition-all">
						Abrir en Google Maps <FaExternalLinkAlt size={12} />
					</a>
				</div>

				<div>
					<div class="flex items-center gap-4 text-primary mb-3">
						<FaClock size={22} class="opacity-80" />
						<h3 class="text-xs font-bold uppercase tracking-widest text-gray-500">
							Horarios de Atención
						</h3>
					</div>
					<p class="text-2xl font-bold text-primary md:text-lg">
						{client.hours}
					</p>
				</div>

				<div>
					<div class="flex items-center gap-4 text-primary mb-3">
						<FaMobileAlt size={22} class="opacity-80" />
						<h3 class="text-xs font-bold uppercase tracking-widest text-gray-500">
							Modalidad
						</h3>
					</div>
					<p class="text-2xl font-bold text-primary md:text-lg">
						Presencial en consultorio
					</p>
				</div>
			</div>
		</div>
		
		<div class="rounded-[30px] overflow-hidden shadow-2xl border-8 border-white aspect-[4/3]">
			<iframe 
				src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3405.0!2d-61.4867!3d-31.2503!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMzHCsDE1JzAxLjEiUyA2McKwMjknMTEuNiJX!5e0!3m2!1ses!2sar!4v1700000000000!5m2!1ses!2sar" 
				width="100%" 
				height="450" 
				class="border-0 w-full h-full"
				allowfullscreen="" 
				loading="lazy">
			</iframe>
		</div>
	</div>
</section>
